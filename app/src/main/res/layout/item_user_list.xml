<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="@dimen/round_profile_image_width"
            android:layout_height="@dimen/round_profile_image_height"
            android:layout_marginTop="@dimen/base_margin_16dp"
            android:layout_marginEnd="@dimen/base_margin_16dp"
            android:layout_marginBottom="@dimen/base_margin_16dp"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/tv_user_login_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textSize="@dimen/base_text_16sp"
            android:textColor="@color/text_color_black"
            android:layout_marginTop="@dimen/base_margin_24dp"
            android:layout_marginBottom="@dimen/base_margin_24dp" />

    </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="52dp"
        android:background="@color/gray" />

</LinearLayout>